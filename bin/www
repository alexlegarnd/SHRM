#!/usr/bin/env node

const VERSION = require('../version');
const DEFAULT_PORT = 3162;

console.log('Simple HTTP Repository Manager (SHRM)');
console.log(`SHRM version: ${VERSION}`);
console.log(`Node.js version: ${process.version} (${process.platform} ${process.arch})`);
console.log(`V8 version: ${process.versions.v8}`);
console.log('Github: https://github.com/alexlegarnd/SHRM');
console.log('');
console.log(`${new Date().toISOString()} INFO [SHRM] STATE001 application is starting`);
const start_time = Date.now();

/**
 * Module dependencies.
 */
const app = require('../app');
const http = require('http');
const configuration = require('../system/configuration');
const system_path = require('../system/path');
const logger = require('../system/logger');

/**
 * Create repo directory if not exist
 */
system_path.createRepoIfNotExist();

/**
 * Get port from configuration file and store in Express.
 */
const port = normalizePort(configuration.getProperty('port', DEFAULT_PORT));
app.set('port', port);

/**
 * Create HTTP server.
 */
const server = http.createServer(app);

/**
 * Listen on provided port, on all network interfaces.
 */

server.listen(port);
server.on('error', onError);
server.on('listening', onListening);

/**
 * Normalize a port into a number, string, or default.
 */

function normalizePort(val) {
  const port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return DEFAULT_PORT;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    logger.error('SHRM', `STATE006 ${error.message}`);
    process.exit(6);
  }

  const bind = typeof port === 'string'
      ? 'pipe ' + port
      : 'port ' + port;

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      logger.error('SHRM', `STATE003 using ${bind} requires elevated privileges`);
      process.exit(3);
      break;
    case 'EADDRINUSE':
      logger.error('SHRM', `STATE004 ${bind} is already in use`);
      process.exit(4);
      break;
    default:
      logger.error('SHRM', `STATE005 ${error.message}`);
      process.exit(5);
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  const addr = server.address();
  const bind = typeof addr === 'string'
      ? 'pipe ' + addr
      : 'port ' + addr.port;
  logger.info('SHRM', 'listening on ' + bind);
  logger.info('SHRM', `STATE002 application started in ${Date.now() - start_time} ms`);
}
